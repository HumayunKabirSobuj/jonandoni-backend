generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model User {
  id                String             @id @default(uuid())
  name              String?
  email             String             @unique
  password          String
  role              UserRole
  business_name     String?
  business_type     BusinessType?
  business_category BusinessCategory[]
  status            UserStatus?
  isActive          Boolean            @default(true)
  branches          String?
  phone_number      String?
  business_address  String?
  city              String?
  area              String?
  postal_code       String?
  storefrontPhoto   String?
  companyLogo       String?
  products          AddProduct[]

  verificationCode String?
  codeExpireAt     DateTime?
  isDeleted        Boolean   @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

enum UserStatus {
  approved
  pending
}

enum UserRole {
  customer
  shop_owner
  admin
}

enum BusinessType {
  Restaurant
  Shop
}

enum BusinessCategory {
  Restaurant
  Grocery
  Electronics
  Fashion
  Pharmacy
  Bakery
  Cafe
  Bookstore
  Furniture
  Other
}

model Category {
  id        String       @id @default(uuid())
  name      String
  isDeleted Boolean      @default(false)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  products  AddProduct[]
}

model AddProduct {
  id             String           @id @default(uuid())
  shopOwnerId    String
  user           User             @relation(fields: [shopOwnerId], references: [id])
  categoryId     String
  category       Category         @relation(fields: [categoryId], references: [id])
  quantity       Int
  price          Float
  description    String
  imageUrl       String?
  status         AddProductStatus @default(Invisible)
  isPublished    Boolean          @default(false)
  discountActive Boolean          @default(false)
  isDeleted      Boolean          @default(false)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

enum AddProductStatus {
  Visible
  Invisible
}
